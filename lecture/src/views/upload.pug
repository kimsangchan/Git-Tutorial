extends base

block content
	if errorMessage
		span=errorMessage
	form(method="POST", enctype="multipart/form-data")
		label(for="video") Video File
		input(type="file", accept="video/*", required, id="video", name="video")
		input(placeholder="Title", required, type="text", name="title", maxlength= 80)
		input(placeholder="Summary", required, type="text", name="summary")
		input(placeholder="Year", required, type="text", name="year")
		input(placeholder="Rating", required, type="text", name="rating")
		input(placeholder="Genres, separated by comma.", required, type="text", name="genres")
		input(type="submit", value="Upload Video")